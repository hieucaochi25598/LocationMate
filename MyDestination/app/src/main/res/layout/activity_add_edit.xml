<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddEditActivity">

    <ImageView
        android:id="@+id/imgAddEditAct_PlacePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAddEditAct_PlaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_place_name"
        android:textSize="20dp"

        app:layout_constraintBottom_toTopOf="@+id/edtAddEditAct_PlaceName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtAddEditAct_PlaceAddress"
        android:layout_width="wrap_content"
        android:textSize="20dp"

        android:layout_height="wrap_content"
        android:text="@string/text_place_address"
        app:layout_constraintBottom_toTopOf="@+id/edtAddEditAct_PlaceAddress"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtAddEditAct_PlaceDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="12dp"
        android:text="@string/text_place_description"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edtAddEditAct_PlaceDes"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtAddEditAct_PlaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="@string/text_place_name"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/txtAddEditAct_PlaceAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtAddEditAct_PlaceAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="@string/text_place_address"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/txtAddEditAct_PlaceDes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtAddEditAct_PlaceDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="340dp"
        android:ems="10"
        android:hint="@string/text_place_description"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnAddEditActSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtAddEditAct_PlaceDes" />


</androidx.constraintlayout.widget.ConstraintLayout>